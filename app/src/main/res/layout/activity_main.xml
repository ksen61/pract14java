<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Крестики-Нолики"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/changeThemeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Сменить тему"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/moon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        <Button
            android:id="@+id/playWithFriendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Играть с другом"
            />

        <Button
            android:id="@+id/playWithBotButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Игра с ботом" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="348dp"
        android:layout_height="241dp"
        android:layout_below="@id/playWithFriendButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="13dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="13dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="3"
        tools:ignore="NotSibling">

        <Button
            android:id="@+id/button00"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button01"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button02"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button10"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button11"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button12"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button20"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button21"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />

        <Button
            android:id="@+id/button22"
            android:layout_width="112dp"
            android:layout_height="65dp"
            android:contentDescription="Button" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@id/gridLayout">

        <TextView
            android:id="@+id/statsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>
